---
interface Props {
  respuesta: string;
  value: number;
}

const { respuesta, value } = Astro.props;
---

<input
  type="radio"
  id={`value-${value}`}
  name="value-radio"
  value={`value-${value}`}
/>
<label for={`value-${value}`}>{respuesta}</label>

<style>
  input {
    display: none;
  }
  label {
    display: flex;
    background-color: #d9eef4;
    padding: 14px;
    margin: 8px 0 0 0;
    font-size: 15px;
    font-weight: 500;
    border-radius: 10px;
    cursor: pointer;
    border: 4px solid #d9eef4;
    color: #042842;
    transition: all 0.3s ease;
  }
  label:hover {
    background-color: #d9eef4;
    color: #042842;
    border: 4px solid #042842;
  }
  input:checked + label {
    background-color: #042842;
    border-color: #d9eef4;
    color: #d9eef4;
  }
</style>
