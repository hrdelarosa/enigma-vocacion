---
interface Props {
  texto: string;
  url?: string;
}

const { texto, url } = Astro.props;
---

<div id="contenedor-boton">
  <a href={url} id="comenzar">{texto}<slot /></a>
</div>

<style>
  #contenedor-boton {
    display: flex;
    align-items: center;
  }
  #comenzar {
    display: flex;
    align-items: center;
    gap: 6px;
    background-color: #042842;
    color: #d9eef4;
    border: 1px solid #d9eef4;
    cursor: pointer;
    padding: 10px 35px;
    font-size: 16px;
    font-weight: 500;
    text-decoration: none;
    transition: all 400ms cubic-bezier(0.23, 1, 0.32, 1);
  }
  #comenzar:hover {
    background-color: #d9eef4;
    border: 1px solid #054a71;
    color: #054a71;
    box-shadow: rgba(0, 0, 0, 0.25) 0 8px 15px;
  }
</style>
