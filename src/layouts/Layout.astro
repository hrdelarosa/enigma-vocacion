---
import Header from "../components/Header.astro";
import "@fontsource-variable/manrope";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
  </body>
</html>
<style is:global>
  html {
    font-family: "Manrope Variable", system-ui, Roboto, "Open Sans", sans-serif;
  }
  main {
    background-color: #ffffff;
    color: #042842;
  }
  body {
    margin: 0;
  }
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  .cuadro {
    padding: 11px;
    display: inline-block;
    position: relative;
    line-height: 1;
    color: #054a71;
    background-color: #d9eef4;
    border: 2px solid #054a71;
  }
  .cuadro::before {
    content: "";
    display: block;
    width: 11px;
    height: 11px;
    background-color: #054a71;
    position: absolute;
    bottom: -6px;
    left: -6px;
  }
  .cuadro::after {
    content: "";
    display: block;
    width: 11px;
    height: 11px;
    background-color: #054a71;
    position: absolute;
    inset: -6px -6px auto auto;
  }

  .content-pregun {
    padding: 0 25px;
  }
  .numPregunta {
    padding-bottom: 15px;
    font-size: 18px;
  }
  .pregunta {
    font-size: 20px;
  }
  #respuestas {
    /* margin-top: 15px; */
    display: flex;
    flex-direction: column;
    padding: 10px 0;
    border-radius: 10px;
    /* width: 320px; */
  }

  .list-pregun {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  li input {
    display: none;
  }
  li label {
    display: flex;
    background-color: #d9eef4;
    padding: 14px;
    margin: 8px 0 0 0;
    font-size: 15px;
    font-weight: 500;
    border-radius: 10px;
    cursor: pointer;
    border: 4px solid #d9eef4;
    color: #042842;
    transition: all 0.3s ease;
  }
  li label:hover {
    background-color: #d9eef4;
    color: #042842;
    border: 4px solid #042842;
  }
  li input:checked + label {
    background-color: #042842;
    border-color: #d9eef4;
    color: #d9eef4;
  }
  #cont-boton {
    display: flex;
    justify-content: end;
    margin-top: 20px;
    align-items: center;
  }
  .boton-sig {
    display: flex;
    align-items: center;
    gap: 6px;
    background-color: #042842;
    color: #d9eef4;
    border: 1px solid #d9eef4;
    cursor: pointer;
    padding: 10px 35px;
    font-size: 16px;
    font-weight: 500;
    text-decoration: none;
    transition: all 400ms cubic-bezier(0.23, 1, 0.32, 1);
  }
  .boton-sig:hover {
    background-color: #d9eef4;
    border: 1px solid #054a71;
    color: #054a71;
    box-shadow: rgba(0, 0, 0, 0.25) 0 8px 15px;
  }
  .boton-sig.desact {
    background-color: #49a9ee;
    color: #d9eef4;
    border: 1px solid #d9eef4;
  }
  .boton-sig.desact:hover {
    background-color: #0d3844;
    border: 1px solid #054a71;
    color: #054a71;
    box-shadow: none;
  }
  .boton-sig a {
    color: inherit;
    text-decoration: none;
  }

  .card .area-svg {
    width: 48px;
    fill: #333;
    transition: all 0.6s cubic-bezier(0.23, 1, 0.32, 1);
  }
  .card:hover .area-svg {
    scale: 0;
    transform: rotate(-45deg);
  }

  #cont-error {
    height: 21px;
  }
  .error {
    display: block;
    margin-right: 20px;
    text-align: end;
    font-size: 15px;
    font-weight: 700;
    color: red;
    animation: mostrarErroe 0.6s ease 0s 1 normal backwards;
  }
  .error.invisible {
    display: none;
  }
  @keyframes mostrarErroe {
    0% {
      transform: scaleX(0.4);
      transform-origin: 100% 100%;
    }

    100% {
      transform: scaleX(1);
      transform-origin: 100% 100%;
    }
  }

  .contenedor-universidades {
    padding-top: 30px;
    display: grid;
    grid-template-columns: auto auto auto;
    justify-content: space-between;
    row-gap: 25px;
  }
</style>
